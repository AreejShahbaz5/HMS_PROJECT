@section scripts{
    <script>
        $('#Check').click(function () {
            $.ajax({
                url: '../Web/GetRooms',
                type: 'POST',
                data: {
                    roomType: parseInt($('#RoomTypes').val()),
                },
                success: function (data) {

                    //var data = JSON.parse(data);
                    $('#tdata tbody').empty();
                    console.log(data);
                    data.forEach(function (dt) {
                        $("#tdata tbody").append("<tr>" +
                            "<td>" + dt.ID + "</td>" +
                            "<td>" + dt.Room_No + "</td>" +
                            "<td>" + dt.Room_Name + "</td>"
                            + "</tr>"
                        );

                    });
                    $('#myModal').modal('show');

                },
                error: function (e) {
                    console.log(e.responseText);
                }
            });
        });
    </script>

